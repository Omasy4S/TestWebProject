@using TestWebProject.HelpClasses
@{
    ViewData["Title"] = "HtmlHelperHome";
}

@{
    var product = new Product[]
    {
        new Product { ProductName = "Гречка" },
        new Product { ProductName = "Макароны" },
    };
}


<head>
    @Html.RenderPageHead("HtmlHelperHome")
</head>
<body>
    <div class="custom-container">
        <h1 class="text-center mb-4">TestProject</h1>

        @Html.CreateParagraph("Пример использования пользовательского HTML-хелпера")

        <div class="product-card">
            <h3 class="mb-3">Список продуктов</h3>
            @Html.CreateList(product)
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>


