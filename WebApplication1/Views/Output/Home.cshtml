
@{
    ViewData["Title"] = "Output";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">💼 Задания с выводом</h1>
        <p class="lead text-muted">
            Практические задания для освоения работы с данными в ASP.NET Core
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <!-- Карточка 1: Вывести значение -->
        <div class="col">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-print fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Вывести значение</h5>
                    <p class="card-text">Простой вывод одиночного значения на страницу</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a class="btn btn-primary" asp-controller="Output" asp-action="PrintValue">
                        Перейти <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Карточка 2: Вывести несколько значений -->
        <div class="col">
            <div class="card h-100 shadow-sm border-success">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-list fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Вывести несколько значений</h5>
                    <p class="card-text">Работа с коллекциями и вывод нескольких элементов</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a class="btn btn-success" asp-controller="Output" asp-action="PrintValueCollection">
                        Перейти <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Карточка 3: Сложение значений -->
        <div class="col">
            <div class="card h-100 shadow-sm border-warning">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-calculator fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Сложение значений</h5>
                    <p class="card-text">Математические операции и обработка введенных данных</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a class="btn btn-warning text-white" asp-controller="Output" asp-action="Calculation">
                        Перейти <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Карточка 4: Создание пользователя -->
        <div class="col">
            <div class="card h-100 shadow-sm border-info">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-plus fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Создание пользователя</h5>
                    <p class="card-text">Работа с формами и обработка пользовательского ввода</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a class="btn btn-info text-white" asp-controller="Output" asp-action="CreateUser">
                        Перейти <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Добавление Font Awesome для иконок -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .card-title {
        font-weight: 600;
        margin-bottom: 15px;
    }

    .card-text {
        color: #6c757d;
        min-height: 48px;
    }
</style>

